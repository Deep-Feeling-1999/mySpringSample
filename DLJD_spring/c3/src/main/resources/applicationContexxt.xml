<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--存储库bean-->
    <bean id="bRepository" class="org.example.dao.repositoryimp.RepositoryImplement"/>

    <!--用户类-->
    <bean id="bUser" class="org.example.domain.MyUser">
        <constructor-arg name="string" value="666"/>
        <constructor-arg name="date" ref="bDate"/>
    </bean>
    <!--用户日期类-->
    <bean id="bDate" class="java.util.Date"/>

    <!--服务bean-->
    <bean id="bService" class="org.example.service.imp.UserServiceImp"/>


</beans>